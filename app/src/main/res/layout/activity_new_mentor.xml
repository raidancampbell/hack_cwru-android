<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hackcwru.hackcwru.NewMentorActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="New Mentor"
            android:id="@+id/newMentorTitle"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newMentorFullNameText"
            android:background="#ffffffff"
            android:enabled="true"
            android:focusable="true"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:layout_marginTop="30dp"
            android:hint="Full Name"
            android:textColorHint="@color/material_blue_grey_800" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newMentorEmailAddressText"
            android:background="#ffffffff"
            android:hint="Email Address"
            android:textColorHint="@color/material_blue_grey_800"
            android:enabled="true"
            android:focusable="true"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newMentorPasswordText"
            android:background="#ffffffff"
            android:hint="Password"
            android:textColorHint="@color/material_blue_grey_800"
            android:enabled="true"
            android:focusable="true"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newMentorSkillsText"
            android:background="#ffffffff"
            android:hint="Skills (comma separated)"
            android:textColorHint="@color/material_blue_grey_800"
            android:enabled="true"
            android:focusable="true"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newMentorCompanyText"
            android:background="#ffffffff"
            android:hint="Company (Optional)"
            android:textColorHint="@color/material_blue_grey_800"
            android:enabled="true"
            android:focusable="true"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/linearLayout" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/newMentorCancelButton"
                android:onClick="cancelButtonPressed"
                android:layout_weight="1" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_weight="1.5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:id="@+id/newMentorCreateButton"
                android:layout_gravity="end"
                android:onClick="newMentorButtonPressed"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".4" />
    </LinearLayout>
</RelativeLayout>
