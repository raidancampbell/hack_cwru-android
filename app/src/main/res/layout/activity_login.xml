<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hackcwru.hackcwru.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Login"
        android:id="@+id/loginTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/loginCancelButton"
        android:layout_below="@+id/loginTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="145dp"
        android:onClick="cancelButtonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/loginLoginButton"
        android:layout_alignBottom="@+id/loginCancelButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="loginButtonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User?"
        android:id="@+id/loginNewUserButton"
        android:layout_alignTop="@+id/loginLoginButton"
        android:layout_centerHorizontal="true"
        android:onClick="newUserButtonPressed" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginEmailText"
        android:layout_below="@+id/loginTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#ffffffff"
        android:autoText="true"
        android:text="Username (email)"
        android:editable="true"
        android:enabled="true"
        android:focusable="false"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#ff000000"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/loginPasswordText"
        android:background="#ffffffff"
        android:autoText="true"
        android:text="Password"
        android:editable="true"
        android:enabled="true"
        android:focusable="false"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="#ff000000"
        android:password="true"
        android:layout_below="@+id/loginEmailText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

</RelativeLayout>
