<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hackcwru.hackcwru.NewUserActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="New User"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newUserFullNameText"
            android:background="#ffffffff"
            android:hint="Full Name"
            android:textColorHint="@color/material_blue_grey_800"
            android:enabled="true"
            android:inputType="text"
            android:focusable="true"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newUserEmailAddressText"
            android:background="#ffffffff"
            android:hint="Email Address"
            android:textColorHint="@color/material_blue_grey_800"
            android:enabled="true"
            android:inputType="textEmailAddress"
            android:focusable="true"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newUserPasswordText"
            android:background="#ffffffff"
            android:hint="Password"
            android:textColorHint="@color/material_blue_grey_800"
            android:enabled="true"
            android:focusable="true"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:layout_marginTop="30dp" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newUserTeamNameText"
            android:background="#ffffffff"
            android:hint="Team Name (Optional)"
            android:textColorHint="@color/material_blue_grey_800"
            android:enabled="true"
            android:focusable="true"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#ff000000"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:id="@+id/newUserHorizontalLayout">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/newUserCancelButton"
                android:layout_weight="1"
                android:onClick="cancelButtonPressed" />

            <Space
                android:layout_width="20px"
                android:layout_height="20px"
                android:layout_weight="3" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create"
                android:id="@+id/newUserCreateButton"
                android:layout_gravity="end"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight=".4"
            android:id="@+id/newUserEmptySpace" />

    </LinearLayout>
</RelativeLayout>
